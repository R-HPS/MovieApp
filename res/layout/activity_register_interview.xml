<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/background"
    android:weightSum="8"
      
    >
    
	<LinearLayout
	    android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/register_question_progress_layout"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center"
        
	    >
	    <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

	</LinearLayout>
        
    <ListView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/register_question_list"
        android:layout_weight="3"
		android:visibility="gone"      
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/register_add_list_layout"
        android:layout_weight="1"
        android:visibility="gone" 
        >
	    <Button
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:id="@+id/add_list_btn"
	        android:text="@string/question_add"
	        />
	    <!-- 入力モードのとき -->
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:id="@+id/register_add_text_layout"
	        android:visibility="gone">
		    <EditText
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:hint="@string/question_hint"
		        android:layout_gravity="left"
		        android:id="@+id/edit_add_question"
		        />
		    <Button 
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:layout_gravity="right"
		        android:id="@+id/add_question_send_btn"
		        
		        />
	    </LinearLayout>
	    
	    <!-- 質問送信中 -->
	    <ProgressBar
			android:id="@+id/register_question_progressBar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="?android:attr/progressBarStyle"
		    android:layout_gravity="center"
		    android:visibility="gone"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/register_atmosphere_layout"
        android:layout_weight="1"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/register_category_layout"
        android:layout_weight="1"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/register_date_layout"
        android:layout_weight="1"
        />

</LinearLayout>