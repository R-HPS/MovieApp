<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >
    <ImageView
        android:id="@+id/headimage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/receive_head_02"
        android:adjustViewBounds="true"
        android:contentDescription="@string/desc" />
    <ListView
        android:paddingTop="5dp"
        android:id="@+id/listView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/companystatus"
        android:layout_above="@+id/changelist"
        android:visibility="gone"
        android:divider="@null"
        android:dividerHeight="10dp"
		>
		
    </ListView>

    
    <FrameLayout
        android:id="@+id/company_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/headimage"
	    android:layout_centerHorizontal="true"
	   
	    >
	    <ImageView
	        android:layout_marginTop="5dp"
	        android:id="@+id/company_title_view"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/receive_company_title_02"
	        android:adjustViewBounds="true"
	        android:contentDescription="@string/desc" />
	
	    <TextView
	        android:id="@+id/companyname"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:textColor="@color/recruit_black"
	        android:text="@string/exampletext" />
	    
	    <TextView
	        android:id="@+id/companyphase"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginTop="18dp"
	        android:textColor="@color/recruit_black"
	        android:text="@string/exampletext" />
	</FrameLayout>	 

	<FrameLayout
	    android:id="@+id/companystatus"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/company_title"
	    android:visibility="gone"
	    >
	    
	    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:contentDescription="@string/desc"
	        android:adjustViewBounds="true"
	        android:src="@drawable/receive00_status_02" />

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:baselineAligned="false"
		    android:orientation="horizontal"
		    android:weightSum="3" >

		    <LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        android:orientation="horizontal"
		        android:weightSum="5"
		        >
		        <View 
				    android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            />
				<RelativeLayout
				    android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
				    >
	
			        <TextView
			            android:id="@+id/odayakapt"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentBottom="true"
			            android:layout_centerHorizontal="true"
			            android:text="@string/atomosphereMeter"
			            android:textColor="@color/blue" />

				</RelativeLayout>
		        <RelativeLayout
				    android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
				    >

			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center"
			            android:id="@+id/futuupt"
			            android:layout_alignParentBottom="true"
			            android:layout_centerHorizontal="true"
			            android:text="@string/atomosphereMeter" 
			            android:textColor="@color/green"/>
				</RelativeLayout>
		        <RelativeLayout
				    android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
				    >
			        

			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center"
						android:id="@+id/appakupt"
			            android:layout_centerHorizontal="true"
			            android:layout_alignParentBottom="true"
			            android:text="@string/atomosphereMeter"
			            android:textColor="@color/red" />
				</RelativeLayout>
				<View
				    android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            />
		    </LinearLayout>
		    
		    <RelativeLayout
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1.00" >

		        <TextView
		            android:id="@+id/timetext"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
		            android:layout_centerVertical="true"
		            android:maxLines="1"
		            android:text="@string/companytime"
		            android:textColor="@color/recruit_black" />

		    </RelativeLayout>

		    <RelativeLayout
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_weight="1.00" >

		        <TextView
		            android:id="@+id/categorytext"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
		            android:layout_centerVertical="true"
		            android:maxLines="1"
		            android:text="@string/companycategory"
		            android:textColor="@color/recruit_black" />

			</RelativeLayout>    
		</LinearLayout>
	</FrameLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/changelist"
        >
	    <ImageButton 
	    android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:id="@+id/realtimebtn"
        android:contentDescription="@string/desc"
        />
        <ImageButton
	    android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:id="@+id/backyardbtn"
        android:contentDescription="@string/desc"
        />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>
