<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
    android:background="@drawable/background">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_company_name"
        android:drawableBottom="@drawable/login_mail_06"
        android:id="@+id/register_company_name"
        />

    <TextView
        android:id="@+id/register_company_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/register_company_section" />

    <Spinner
        android:id="@+id/register_company_section_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_company_phase"
        android:id="@+id/register_company_phase"
        />
    <Spinner
        android:id="@+id/register_company_phase_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
	<TextView
	    android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_company_time"
        android:id="@+id/register_company_time" />
	    
	<TextView
	    android:id="@+id/register_company_date_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:drawableRight="@drawable/register00_regbutton_07" />
	        
	<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:drawableRight="@drawable/register00_regbutton_07"
	        android:id="@+id/register_company_time_text"
	    />

	<ImageView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="30dp"
	    android:src="@drawable/register00_regbutton_07" 
	    android:contentDescription="@string/desc"
	    android:id="@+id/register_company_registbtn"/>

</LinearLayout>
